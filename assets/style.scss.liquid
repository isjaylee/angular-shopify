body {
  /* font-family: 'Raleway', sans-serif; */ 
}

.row.no-pad {
  margin-right:0;
  margin-left:0;
}
.row.no-pad > [class*='col-'] {
  padding-right:0;
  padding-left:0;
}

a {
  color: #AF2FB1;
  &:hover, &:focus {
    text-decoration: none;
    color: #CC45CE;
  }
  &:active {
    color: #AF2FB1;
    text-decoration: none;
  }
}

.hidden {
  display: none;
}

header {
  background: #FFF;
  position: relative;
  padding: 15px 0;
  color: #252525;
  #logo img {
    width: 60%;
  }
  i {
    font-size: 20px;
    color: #AF2FB1;
  }
  p {
    margin: 0 15px 0 0;
  }
  .header-link {
    font-size: 12px;
  }
}

nav {
  border-top: 1px solid #EEE;
  border-bottom: 1px solid #EEE;
  letter-spacing: 1px;
  font-weight: 700;
  font-size: 14px;
  color: #787b7b;
  padding: 15px 0;
  a {
    margin: 0;
    padding-right: 20px;
    color: #787B7B;
    &.active, &:hover {
      color: #AF2FB1;
      text-decoration: none;
    }
    .navbar-words {
      padding: 15px 15px;
      text-transform: uppercase;
      &.active, &:hover {
        border-bottom: 3px solid #AF2FB1;
      }
    }
    &:before {
      background-image: url({{ 'forward-slash.png' | asset_url }});
      background-position-x: 0px;
      background-position-y: 50%;
      background-size: initial;
      background-repeat-x: no-repeat;
      background-repeat-y: no-repeat;
      content: " ";
      padding-right: 30px;
      color: #EEE;
    }
  }
}

