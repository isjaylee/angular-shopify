<div class="container">
  <div class="login-container">
    <div class="row">
      <div class="col-md-6 login-registered-section">
        <div id="registered-customer-form">
          <p class="login-text-header">Registered Customers</p>
          <p class="login-text">If you have an account, sign in with your email.</p>

          {% form 'customer_login', class: 'form-horizontal' %}
            {{ form.errors | default_errors }}
            <div class="form-group">
              <label class="col-sm-2 control-label">Email</label>
              <div class="col-sm-8">
                <input type="email" name="customer[email]" class="form-control" placeholder="Email">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Password</label>
              <div class="col-sm-8">
                <input type="password" name="customer[password]" class="form-control" placeholder="Password">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                  <label>
                    <input type="checkbox"> Remember me
                  </label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Sign in</button>
              </div>
            </div>
          {% endform %}

          <p>
            <a href="#" onclick="showRecoverPasswordForm();return false;">{{ 'customer.login.forgot_password' | t }}</a>
          </p>
        </div>

        {% comment %}
          Recover Password Form
        {% endcomment %}

        <div id="recover-password" class="hide" >
          <div class="template_header">
            <h2 class="title">Reset Password</h2>
            <p class="note">We will send you an email to reset your password.</p>
          </div>

          {% form 'recover_customer_password' %}
            {{ form.errors | default_errors }}

            <div id="recover_email" class="clearfix large_form">
              <label for="email" class="large">Email</label>
              <input type="email" value="" size="30" name="email" id="recover-email" class="large" />
            </div>
            <div class="action_bottom">
              <input class="btn btn-primary" type="submit" value="Submit" />
              <span class="note">or <a href="#" onclick="hideRecoverPasswordForm();return false;">Cancel</a></span>
            </div>
          {% endform %}
        </div>
      </div>

      <div class="col-md-6 login-newuser-section">
        <p class="login-text-header">New Customers</p>
        <p class="login-text">If you have an account, sign in with your email.</p>

        {% form 'create_customer', class: 'form-horizontal' %}
          {{ form.errors | default_errors }}
          <div class="form-group">
            <label class="col-sm-2 control-label">First Name</label>
            <div class="col-sm-8">
              <input type="text" name="customer[first_name]" class="form-control" placeholder="First Name">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Last Name</label>
            <div class="col-sm-8">
              <input type="text" name="customer[last_name]" class="form-control" placeholder="Last Name">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-8">
              <input type="email" name="customer[email]" class="form-control" placeholder="Email">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Password</label>
            <div class="col-sm-8">
              <input type="password" name="customer[password]" class="form-control" placeholder="Password">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary">Create Account</button>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  function showRecoverPasswordForm() {
    window.location.hash = '#recover';
    $('#recover-password').removeClass('hide');
    $('#registered-customer-form').addClass('hide');
  }

  function hideRecoverPasswordForm() {
    $('#recover-password').addClass('hide');
    $('#registered-customer-form').removeClass('hide');
  }

  if (window.location.hash === '#recover') {
    showRecoverPasswordForm()
  }
</script>
