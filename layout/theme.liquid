<!doctype html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    {% if template == 'index' %}
    <title>{{ shop.name }} | {{ page_title }}</title>
    {% elsif template == '404' %}
    <title>Page Not Found | {{ shop.name }}</title>
    {% else %}
    <title>{{ page_title }} | {{ shop.name }}</title>
    {% endif %}
    {% if page_description %}
    <meta name="description" content="{{ page_description }}" />
    {% endif %}
    <link rel="canonical" href="{{ canonical_url }}" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:400,500,600,700">
    <link rel="stylesheet" href="https://unpkg.com/angular-toastr/dist/angular-toastr.css" />
    <meta name="viewport" content="width=device-width" />
    {{ content_for_header }}

    {{ 'bootstrap.css' | asset_url | stylesheet_tag }}
    {{ 'linearicons.scss.css' | asset_url | stylesheet_tag }}
    {{ 'font-awesome.scss.css' | asset_url | stylesheet_tag }}
    {{ 'paymentfont.scss.css' | asset_url | stylesheet_tag }}
    {{ 'style.scss.css' | asset_url | stylesheet_tag }}

    {{ 'angular.js' | asset_url | script_tag }}
    {{ 'jquery.js' | asset_url | script_tag }}
    <script src="https://unpkg.com/angular-toastr/dist/angular-toastr.tpls.js"></script>
</head>
<body>
    {% include 'header' %}
    {% include 'navbar' %}
    {{ content_for_layout }}
    {% include 'footer' %}

    {{ 'lodash.js' | asset_url | script_tag }}
    {{ 'bootstrap.js' | asset_url | script_tag }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/numeral.js/2.0.4/numeral.min.js"></script>
</body>
</html>
